{
  "key": {
    "secret": "bucketeer-oauth-key"
  },
  "issuer": "https://localhost",
  "audience": "bucketeer",
  "google": {
    "issuer": "",
    "clientId": "",
    "clientSecret": "",
    "redirectUrls": [
      "https://localhost/auth/callback",
      "https://localhost/v3/auth/callback"
    ]
  },
  "password": {
    "enabled": true,
    "policy": {
      "minLength": 8,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumbers": true,
      "requireSymbols": false
    },
    "tokens": {
      "resetTTL": "1h",
      "setupTTL": "24h"
    },
    "urls": {
      "resetPath": "/auth/reset-password",
      "setupPath": "/auth/setup-password",
      "tokenParam": "token"
    }
  },
  "demoSignIn": {
    "enabled": true,
    "email": "demo@bucketeer.io",
    "password": "demo",
    "organizationId": "demo",
    "organizationOwnerEmail": "demo@bucketeer.io",
    "projectId": "demo",
    "environmentId": "demo",
    "isSystemAdmin": true
  }
} 